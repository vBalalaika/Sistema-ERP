@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<ERP.Language.SharedResource> localizer
@model ERP.Web.Areas.Identity.Pages.Account.DeactivatedModel
@{
    ViewData["Title"] = localizer["Deactivated"];
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@localizer["Account Not Active"]</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <partial name="_Styles" />
</head>
<body class="hold-transition login-page" style="background: white!important;">
    <div class="login-box" style="width:600px!important;">
        <!-- /.login-logo -->
        <p class="login-box-msg">@localizer["You account is not activated. Please contact your Administrator to activate your account."]</p>
        <!-- /.login-card-body -->
        <div style="text-align: -webkit-center;">
            <p class="mb-1">
                <a type="button" asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">@localizer["Sign In"]</a>
            </p>
            <br />
        </div>
    </div>
    <partial name="_Scripts" />
</body>
</html>