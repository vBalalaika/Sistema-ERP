@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<ERP.Language.SharedResource> localizer
@{
    ViewData["Title"] = localizer["Access Denied"];
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@localizer["Sorry, This Page Can&#39;t Be Accessed"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <partial name="_Styles" />
</head>
<body class="hold-transition login-page" style="background: white!important;">
    <div class="login-box" style="width:600px!important;">
        <div class="login-logo">
        </div>
        <!-- /.login-logo -->
        <p class="login-box-msg">@localizer["Sorry, you do not have access to this resource.<br />Please go back to the previous page to continue browsing."]</p>
        <!-- /.login-card-body -->
        <div style="text-align:-webkit-center;">
            <p class="mb-1">
                <a class="btn btn-danger" href="javascript:history.back()">@localizer["Go Back"]</a>
            </p>
            <br />
        </div>
    </div>
    <partial name="_Scripts" />
</body>
</html>