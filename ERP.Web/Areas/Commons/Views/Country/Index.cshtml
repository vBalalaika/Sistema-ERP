@using Microsoft.AspNetCore.Mvc.Localization
@using ERP.Web.Areas.Commons.Models
@inject IHtmlLocalizer<ERP.Language.SharedResource> localizer
@{
    ViewData["Title"] = localizer["Countries"];
}
@model CountryViewModel

 <body>
     <div class="card">
         
         <div id="viewAll" class="card-body table-responsive">

         </div>

     </div>
 </body>

@section Scripts
{

<script src="~/js/site.js"></script>
<script>
    $(document).ready(function () {

        let countriesTable = $("#countryTable").DataTable({ "oLanguage": @localizer["LanguageDataTable"] });

        countriesTable.buttons().container()
            .appendTo('#div-export-buttons .btn-group');

        loadData();

        $('#reload').on('click', function () {
            loadData();
        });
    });

    function loadData() {
        $('#viewAll').load('/commons/country/LoadAll');
    }

</script>
}